<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"></LinearLayout>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="#004b23">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="179dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logosa" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="25dp"
            android:text="Kota Pekalongan"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="125dp"
        android:background="#00F8F5F5"
        android:text="SMK SYAFI'I AKROM"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="top|center" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="410dp"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/BKK"
            android:layout_width="169dp"
            android:layout_height="135dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="560dp"
            app:cardBackgroundColor="#a1cca5"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                app:srcCompat="@drawable/bk_aj" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Info BKK"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/lokasi"
            android:layout_width="169dp"
            android:layout_height="133dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="560dp"
            app:cardBackgroundColor="#a1cca5"
            app:cardCornerRadius="60dp">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Lokasi"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="match_parent"
                android:layout_height="76dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/liko" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:id="@+id/daftar"
            android:layout_width="171dp"
            android:layout_height="149dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="390dp"
            app:cardBackgroundColor="#8fb996"
            app:cardCornerRadius="60dp">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Info Pendafatan"
                android:textColor="#020202"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageView11"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/daftar_onlie" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/galery"
            android:layout_width="165dp"
            android:layout_height="149dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="390dp"
            app:cardBackgroundColor="#8fb996"
            app:cardCornerRadius="60dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Galeri"
                android:textColor="#000000"
                android:textStyle="bold|italic" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                app:srcCompat="@drawable/gallery_uwu" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="761dp"
        android:orientation="horizontal"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center">

        <androidx.cardview.widget.CardView
            android:id="@drawable/jadwal"
            android:layout_width="166dp"
            android:layout_height="155dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="210dp"
            app:cardBackgroundColor="#709775"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/imageView20"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                app:srcCompat="@drawable/jadwal" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="110dp"
                android:text="Jadwal Pelajaran"
                android:textColor="#050505"
                android:textStyle="bold|italic" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/data guru"
            android:layout_width="172dp"
            android:layout_height="152dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="210dp"
            app:cardBackgroundColor="#709775"
            app:cardCornerRadius="60dp">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="130dp"
                android:layout_height="80dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/guruuu" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:text="Data Guru"
                android:textColor="#000000"
                android:textStyle="bold|italic" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>