<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"


    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/info bkk"
        android:layout_width="144dp"
        android:layout_height="130dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="370dp"
        app:cardBackgroundColor="#9FAE8F"
        app:cardCornerRadius="20dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/galery"
        android:layout_width="151dp"
        android:layout_height="130dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="370dp"
        app:cardBackgroundColor="#9FAE8F"
        app:cardCornerRadius="20dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/dataguru"
        android:layout_width="142dp"
        android:layout_height="130dp"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="230dp"
        app:cardBackgroundColor="#C3E1A0"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageView10"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            app:srcCompat="@drawable/tea" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/jadwalpelajaran"
        android:layout_width="145dp"
        android:layout_height="130dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="230dp"
        app:cardBackgroundColor="#C3E1A0"
        app:cardCornerRadius="20dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            app:srcCompat="@drawable/jadwal" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:paddingTop="25dp"
            android:text="Jadwal Pelajaran"
            android:textStyle="bold|italic" />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"

        android:layout_width="match_parent"
        android:layout_height="187dp"
        android:background="#218125">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="179dp"
            android:layout_height="122dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/logosa" />

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        android:background="#00F8F5F5"
        android:text="SMK SYAFI'I AKROM"
        android:textColor="#FAFAFA"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_anchor="@+id/appbar"
        app:layout_anchorGravity="top|center" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>